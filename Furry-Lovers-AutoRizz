local Container = Instance.new("ScrollingFrame", MainFrame)
Container.Size = UDim2.new(1, -20, 1, -60)
Container.Position = UDim2.new(0.5, 0, 0, 55)
Container.AnchorPoint = Vector2.new(0.5, 0)
Container.BackgroundTransparency = 1
Container.ScrollBarThickness = 0
local UIList = Instance.new("UIListLayout", Container)
UIList.Padding = UDim.new(0, 8)
UIList.HorizontalAlignment = Enum.HorizontalAlignment.Center

UIList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
	Container.CanvasSize = UDim2.new(0, 0, 0, UIList.AbsoluteContentSize.Y + 10)
end)

local function Chat(msg)
	local finalMsg = Grammar and msg or msg:lower():gsub("%p", "")
	if TextChatService.ChatVersion == Enum.ChatVersion.TextChatService then
		local channel = TextChatService.TextChannels:FindFirstChild("RBXGeneral")
		if channel then channel:SendAsync(finalMsg) end
	else
		local ev = game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents")
		if ev then ev.SayMessageRequest:FireServer(finalMsg, "All") end
	end
end

local function AddTheme(name)
	local Row = Instance.new("Frame", Container)
	Row.Size = UDim2.new(0.95, 0, 0, 70)
	Row.BackgroundColor3 = CONFIG.White
	Row.BackgroundTransparency = 0.5
	Instance.new("UICorner", Row).CornerRadius = UDim.new(0, 12)

	local Txt = Instance.new("TextLabel", Row)
	Txt.Text = name
	Txt.Font = CONFIG.Font
	Txt.Size = UDim2.new(1, -20, 0, 25)
	Txt.Position = UDim2.new(0, 10, 0, 5)
	Txt.TextXAlignment = Enum.TextXAlignment.Left
	Txt.TextColor3 = Color3.fromRGB(60, 60, 60)
	Txt.TextSize = 13
	Txt.BackgroundTransparency = 1

	local Box = Instance.new("TextBox", Row)
	Box.Size = UDim2.new(0.6, -15, 0, 25)
	Box.Position = UDim2.new(0, 10, 0, 35)
	Box.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
	Box.PlaceholderText = "Count..."
	Box.Text = ""
	Box.Font = CONFIG.Font
	Box.TextSize = 12
	Instance.new("UICorner", Box).CornerRadius = UDim.new(0, 6)

	local Ok = Instance.new("TextButton", Row)
	Ok.Size = UDim2.new(0.35, -5, 0, 25)
	Ok.Position = UDim2.new(0.6, 5, 0, 35)
	Ok.BackgroundColor3 = CONFIG.MainColor
	Ok.Text = "SEND"
	Ok.TextColor3 = CONFIG.White
	Ok.Font = CONFIG.Font
	Ok.TextSize = 12
	Instance.new("UICorner", Ok).CornerRadius = UDim.new(0, 6)

	Ok.MouseButton1Click:Connect(function()
		local count = tonumber(Box.Text) or 1
		for i=1, count do
			Chat(GetRandomLine(name))
			task.wait(MsgDelay)
		end
	end)
end

local function AddSettings()
	local Header = Instance.new("TextLabel", Container)
	Header.Size = UDim2.new(1, 0, 0, 30)
	Header.Text = "SETTINGS"
	Header.Font = CONFIG.Font
	Header.TextColor3 = Color3.fromRGB(100, 100, 100)
	Header.TextSize = 12
	Header.BackgroundTransparency = 1

	local DelayBtn = Instance.new("TextButton", Container)
	DelayBtn.Size = UDim2.new(0.95, 0, 0, 35)
	DelayBtn.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
	DelayBtn.Text = "Delay: " .. MsgDelay .. "s"
	DelayBtn.Font = CONFIG.Font
	DelayBtn.TextColor3 = Color3.fromRGB(50, 50, 50)
	Instance.new("UICorner", DelayBtn).CornerRadius = UDim.new(0, 8)

	DelayBtn.MouseButton1Click:Connect(function()
		MsgDelay = MsgDelay >= 5 and 1 or MsgDelay + 0.5
		DelayBtn.Text = "Delay: " .. MsgDelay .. "s"
	end)

	local GramBtn = Instance.new("TextButton", Container)
	GramBtn.Size = UDim2.new(0.95, 0, 0, 35)
	GramBtn.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
	GramBtn.Text = "Grammar: " .. (Grammar and "ON" or "OFF")
	GramBtn.Font = CONFIG.Font
	GramBtn.TextColor3 = Color3.fromRGB(50, 50, 50)
	Instance.new("UICorner", GramBtn).CornerRadius = UDim.new(0, 8)

	GramBtn.MouseButton1Click:Connect(function()
		Grammar = not Grammar
		GramBtn.Text = "Grammar: " .. (Grammar and "ON" or "OFF")
	end)
end

local keys = {}
for k in pairs(DATABASE) do table.insert(keys, k) end
table.sort(keys)
for _, t in ipairs(keys) do AddTheme(t) end
AddSettings()

local dragging, dragStart, startPos
TopBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
		local delta = input.Position - dragStart
		MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

UserInputService.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = false
	end
end)

MiniBtn.MouseButton1Click:Connect(function()
	Minimized = not Minimized
	local targetSize = Minimized and UDim2.new(0, 280, 0, 50) or UDim2.new(0, 280, 0, 350)
	local targetBlur = Minimized and 0 or 15
	
	TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Size = targetSize}):Play()
	TweenService:Create(blur, TweenInfo.new(0.5), {Size = targetBlur}):Play()
	TweenService:Create(Pill, TweenInfo.new(0.3), {BackgroundTransparency = Minimized and 0.8 or 0.4}):Play()
end)

ScreenGui.Destroying:Connect(function() blur:Destroy() end)
StarterGui:SetCore("SendNotification", {Title = "Furry Love", Text = "By Cap(CapLonerPo)", Duration = 3})

